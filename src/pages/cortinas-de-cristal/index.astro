  <style is:global>
/* ========== CORTINAS PAGE SPECIFIC STYLES ========== */

    /* --- Benefits Grid --- */
    .benefits-grid-section { padding: 100px 0; background: var(--gray-50); }
    .benefits-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 24px;
        margin-top: 48px;
    }
    .benefit-card {
        background: var(--white);
        padding: 36px 28px;
        border-radius: var(--radius-lg);
        border: 1px solid var(--gray-100);
        transition: all var(--transition-base);
        text-align: center;
    }
    .benefit-card:hover {
        border-color: var(--blue-200);
        transform: translateY(-6px);
        box-shadow: var(--shadow-lg);
    }
    .benefit-icon {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--gradient-light);
        border-radius: var(--radius-md);
        margin: 0 auto 20px;
        color: var(--blue-500);
    }
    .benefit-card h3 {
        font-size: 1.05rem;
        font-weight: 600;
        color: var(--gray-800);
        margin-bottom: 10px;
    }
    .benefit-card p {
        font-size: 0.88rem;
        color: var(--gray-500);
        line-height: 1.65;
    }

    /* --- Easy Cleaning Spotlight --- */
    .cleaning-spotlight {
        padding: 100px 0;
        background: var(--white);
    }
    .cleaning-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 64px;
        align-items: center;
    }
    .cleaning-text h2 {
        font-family: var(--font-serif);
        font-size: clamp(1.6rem, 3vw, 2.2rem);
        color: var(--gray-900);
        margin-bottom: 20px;
        line-height: 1.25;
    }
    .cleaning-text p {
        color: var(--gray-600);
        line-height: 1.8;
        margin-bottom: 16px;
    }
    .cleaning-steps {
        display: flex;
        flex-direction: column;
        gap: 16px;
        margin-top: 28px;
    }
    .cleaning-step {
        display: flex;
        align-items: flex-start;
        gap: 14px;
    }
    .cleaning-step-num {
        flex-shrink: 0;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--gradient-primary);
        color: var(--white);
        font-size: 0.82rem;
        font-weight: 700;
        border-radius: 50%;
    }
    .cleaning-step p {
        margin-bottom: 0;
        font-size: 0.92rem;
    }
    .cleaning-image {
        border-radius: var(--radius-lg);
        overflow: hidden;
    }
    .cleaning-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: var(--radius-lg);
        aspect-ratio: 4/3;
    }

    /* --- Social Proof --- */
    .social-proof { padding: 100px 0; background: var(--white); }
    .reviews-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 24px;
        margin-top: 48px;
    }
    .review-card {
        background: var(--gray-50);
        padding: 32px 28px;
        border-radius: var(--radius-lg);
        border: 1px solid var(--gray-100);
        display: flex;
        flex-direction: column;
    }
    .review-stars {
        display: flex;
        gap: 2px;
        margin-bottom: 16px;
        color: #f59e0b;
    }
    .review-card blockquote {
        font-size: 0.92rem;
        color: var(--gray-600);
        line-height: 1.7;
        margin-bottom: 20px;
        font-style: italic;
        flex: 1;
    }
    .review-author {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-top: auto;
        padding-top: 16px;
        border-top: 1px solid var(--gray-100);
    }
    .review-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: var(--gradient-light);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.85rem;
        color: var(--blue-600);
    }
    .review-author-info span {
        display: block;
    }
    .review-author-name {
        font-size: 0.88rem;
        font-weight: 600;
        color: var(--gray-800);
    }
    .review-author-loc {
